<% layout('layouts/boilerplate') -%>

<h1>Inscription</h1>

<form action="/register" method="POST" class="validated-form" novalidate>
    <div class="mb-3">
        <label class="form-label" for="username">Pseudo</label>
        <input
            class="form-control"
            type="text"
            name="username"
            id="username"
            placeholder="Votre pseudo"
            autocomplete="off"
            required
        />
        <div class="valid-feedback">Champ rempli</div>
    </div>
    <div class="mb-3">
        <label class="form-label" for="email">Email</label>
        <input
            class="form-control"
            type="email"
            name="email"
            id="email"
            placeholder="Votre email"
            required
        />
        <div class="valid-feedback">Champ rempli</div>
    </div>
    <div class="mb-3">
        <label class="form-label" for="password">Mot de passe</label>
        <input
            class="form-control"
            type="password"
            name="password"
            id="password"
            placeholder="mot de passe"
            required
        />
        <div class="valid-feedback">Champ rempli</div>
    </div>
    <div class="mb-3">
        <button class="btn btn-success" type="submit">S'inscrire</button>
    </div>
</form>
