<% layout('layouts/boilerplate') -%>
<div class="row">
    <h1 class="text-center">Nouveau camping</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds" method="POST">
            <div class="mb-3">
                <label class="form-label" for="title">Titre</label>
                <input
                    class="form-control"
                    type="text"
                    name="campground[title]"
                    id="title"
                    placeholder="Titre du camping"
                />
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Localisation</label>
                <input
                    class="form-control"
                    type="text"
                    name="campground[location]"
                    id="title"
                    placeholder="localisation du camping"
                />
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image URL</label>
                <input
                    class="form-control"
                    type="text"
                    name="campground[image]"
                    id="title"
                    placeholder="image"
                />
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Prix du camping</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">â‚¬</span>
                    <input
                        type="text"
                        class="form-control"
                        placeholder="0.00"
                        aria-label="Prix"
                        id="price"
                        aria-describedby="price-label"
                        name="campground[price]"
                    />
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea
                    class="form-control"
                    type="text"
                    name="campground[description]"
                    id="title"
                    placeholder="description"
                ></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-success" type="submit">Ajouter le camping</button>
            </div>
        </form>
        <a href="/campgrounds">Tous les Camping</a>
    </div>
</div>
